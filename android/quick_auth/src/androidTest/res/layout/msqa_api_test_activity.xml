<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Sign in api  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/test_sign_in_api_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testSignInApiSuccess"
            android:padding="15dp"
            android:text="success" />

        <TextView
            android:id="@+id/test_sign_in_api_failure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testSignInApiFailure"
            android:padding="15dp"
            android:text="failure" />

        <TextView
            android:id="@+id/test_sign_in_api_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testSignInApiCancel"
            android:padding="15dp"
            android:text="cancel" />
    </LinearLayout>

    <!--  Sign out  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/test_sign_out_api_with_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testSignOutApi"
            android:padding="15dp"
            android:text="with account" />

        <TextView
            android:id="@+id/test_sign_out_api_without_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testSignOutApi"
            android:padding="15dp"
            android:text="without account" />

    </LinearLayout>

    <!-- get current account   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/test_get_account_api_with_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testGetCurrentAccountApi"
            android:padding="15dp"
            android:text="with account" />

        <TextView
            android:id="@+id/test_get_account_api_without_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testGetCurrentAccountApi"
            android:padding="15dp"
            android:text="without account" />

    </LinearLayout>


    <!--  Acquire token  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/test_acquire_token_api_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testAcquireTokenApiSuccess"
            android:padding="15dp"
            android:text="success" />

        <TextView
            android:id="@+id/test_acquire_token_api_failure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testAcquireTokenApiFailure"
            android:padding="15dp"
            android:text="failure" />

        <TextView
            android:id="@+id/test_acquire_token_api_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testAcquireTokenApiCancel"
            android:padding="15dp"
            android:text="cancel" />

        <TextView
            android:id="@+id/test_acquire_token_api_no_scope"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testAcquireTokenApiNoScope"
            android:padding="15dp"
            android:text="no-scope" />
    </LinearLayout>

    <!--  acquire token silent  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/test_acquire_token_silent_api_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testAcquireTokenSilentApiSuccess"
            android:padding="15dp"
            android:text="success" />

        <TextView
            android:id="@+id/test_acquire_token_silent_api_failure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testAcquireTokenSilentApiFailure"
            android:padding="15dp"
            android:text="failure" />

        <TextView
            android:id="@+id/test_acquire_token_silent_api_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#546E7A"
            android:gravity="center"
            android:onClick="testAcquireTokenSilentApiCancel"
            android:padding="15dp"
            android:text="cancel" />

    </LinearLayout>

</LinearLayout>